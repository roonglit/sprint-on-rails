<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= article.description %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= article.summary %>
  </p>

  <p>
    <strong>Cover Image:</strong>
    <% if article.cover_image.attached? %>
      <%= image_tag article.cover_image %>
    <% else %>
      No cover image available.
    <% end %>
  </p>

</div>
